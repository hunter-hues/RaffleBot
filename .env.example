# Database
# For local development, use SQLite
DATABASE_URL=sqlite:///giveaway.db
# For Render deployment, SQLite will be used automatically

# Flask
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=production
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Twitch
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here
BOT_TOKEN=your_bot_token_here
BOT_NICK=rafflebot_giveaways
BOT_PREFIX=!
DEFAULT_CHANNEL=rafflebot_giveaways
REDIRECT_URI=https://your-app-name.onrender.com/auth/twitch/callback

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/app.log

# Rate Limiting
RATE_LIMIT_DEFAULT=10/minute
RATE_LIMIT_AUTH=5/minute

# Note: This application is configured for Render's free tier.
# The chatbot runs in a separate thread within the web service.
# For production use with higher traffic, consider upgrading to a paid plan. 